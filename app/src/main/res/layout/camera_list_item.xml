<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="5dip"
    android:paddingRight="5dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.studioidan.turaco.CustomView.AsyncCircularImageView
            android:id="@+id/vd_camera_list_item"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:duplicateParentState="true"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" />

        <ImageView
            android:id="@+id/im_curreuntplaying"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignBottom="@+id/vd_camera_list_item"
            android:layout_alignLeft="@+id/vd_camera_list_item"
            android:src="@android:drawable/ic_media_play"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lbl_camera_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:duplicateParentState="true"
        android:textColor="#FFFEFE"
        android:textSize="19sp"
        android:textStyle="normal"
        android:typeface="sans" />

</LinearLayout>