<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:padding="@dimen/S4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_bg">

        <ImageView
            android:id="@+id/vd_camera_list_item"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            />

        <ImageView
            android:id="@+id/im_curreuntplaying"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@android:drawable/ic_media_play"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/lbl_camera_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/S10"
            android:layout_toEndOf="@+id/vd_camera_list_item"
            android:layout_toRightOf="@+id/vd_camera_list_item"
            android:duplicateParentState="true"
            android:textColor="#FFFEFE"
            android:textSize="19sp"
            android:textStyle="normal"
            android:typeface="sans" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imgStatic"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/img_static_image" />
    </RelativeLayout>

</RelativeLayout>