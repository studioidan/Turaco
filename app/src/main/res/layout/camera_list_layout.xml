<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical">

    <com.studioidan.turaco.CustomView.CustomVideoView
        android:id="@+id/videoView1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/videoViewHeight"
        android:layout_margin="@dimen/S3" />


    <ListView
        android:id="@+id/ls_camera_list_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/S5"
        android:paddingLeft="@dimen/S11"
        android:paddingRight="@dimen/S11"
        android:visibility="visible"></ListView>

</LinearLayout>